<UserControl x:Class="CS106_Project.Views.UserControls.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="LoginContainer" Background="White" Width="300" Height="400" >
            <Label Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0 20 0 20"></Label>
 <!--disable the horizontal aliignment and play with the margin-->
            <Label Content="Email" HorizontalAlignment="Left" Margin="25 10 0 0"></Label>
            <TextBox x:Name="EmailInput" HorizontalAlignment="Center" VerticalContentAlignment="Center" Width="240" Height="30"></TextBox>

            <Label Content="Password" HorizontalAlignment="Left" Margin="25 10 0 0"></Label>
            <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Center" VerticalContentAlignment="Center" Width="240" Height="30"></PasswordBox>

            <TextBlock x:Name="MessageText" Visibility="Collapsed" TextWrapping="Wrap" Foreground="Red" Text="" HorizontalAlignment="Left" Margin="30 10 0 0"></TextBlock>
            <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Width="240" Height="30" Margin="0 20 0 0" Click="OnLogin" ></Button>

            <TextBlock Margin="30 5 0 0" HorizontalAlignment="Left" MouseLeftButtonDown="OnSwitchingToSignUp">
                <Underline >Do not have an account yet?</Underline>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
