<UserControl x:Class="CS106_Project.Views.UserControls.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel x:Name="LoginContainer" Background="White"  >
            <Label Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Margin="0 30 0 15"></Label>

            <Label Content="Email" HorizontalAlignment="Left" Margin="25 10 0 0" FontSize="20"></Label>
            <TextBox x:Name="EmailInput"  VerticalContentAlignment="Center"  Height="40" Margin="30 10 25 0" FontSize="18"></TextBox>

            <Label Content="Password" HorizontalAlignment="Left" Margin="25 10 0 0" FontSize="20"></Label>
            <PasswordBox x:Name="PasswordInput"  VerticalContentAlignment="Center"  Margin="30 10 25 0" Height="40" FontSize="18"></PasswordBox>

            <TextBlock x:Name="MessageText" Visibility="Collapsed" TextWrapping="Wrap" Foreground="Red" Text="" HorizontalAlignment="Left" Margin="30 10 0 0" FontSize="18"></TextBlock>
            <Button x:Name="LoginButton" Content="Login" FontSize="18"  Height="40"  Margin="30 30 25 0" Click="OnLogin" ></Button>

            <TextBlock Margin="30 10 0 0" HorizontalAlignment="Left" FontSize="18" MouseLeftButtonDown="OnSwitchingToSignUp">
                <Underline >Do not have an account yet?</Underline>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
