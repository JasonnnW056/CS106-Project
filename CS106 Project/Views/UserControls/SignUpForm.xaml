<UserControl x:Class="CS106_Project.Views.UserControls.SignUpForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel x:Name="SignUpContainer"  Background="White">
            <Label Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Margin="0 0 0 15"></Label>


            <Label Content="Username" HorizontalAlignment="Left" Margin="25 0 0 5" FontSize="20"></Label>
            <TextBox x:Name="UsernameInput"  VerticalContentAlignment="Center" Margin="30 10 25 0" Height="40" FontSize="18"></TextBox >

            <Label Content="Email" HorizontalAlignment="Left" Margin="25 10 0 0" FontSize="20"></Label>
            <TextBox x:Name="EmailInput"  VerticalContentAlignment="Center" Margin="30 10 25 0" Height="40" FontSize="18"></TextBox>

            <Label Content="Password" HorizontalAlignment="Left" Margin="25 10 0 0" FontSize="20"></Label>
            <PasswordBox x:Name="PasswordInput"  VerticalContentAlignment="Center" Margin="30 10 25 0" Height="40" FontSize="18"></PasswordBox>

            <!--errortext cek-->
            <TextBlock x:Name="ErrorText" Visibility="Collapsed" TextWrapping="Wrap" Foreground="Red" Text="" HorizontalAlignment="Left" Margin="30 10 0 0"></TextBlock>
            <Button x:Name="SignUpButton" Content="Sign Up"  Margin="30 40 25 0" Height="40" Click="OnSignUp" FontSize="18"></Button>

            <TextBlock  Margin="30 10 0 0" HorizontalAlignment="Left" FontSize="18" MouseLeftButtonDown="OnSwitchingToLogin">
                <Underline >Already have an account?</Underline>
            </TextBlock>
        </StackPanel>

    </Grid>
</UserControl>
