<UserControl x:Class="CS106_Project.Views.UserControls.SignUpForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel x:Name="SignUpContainer" Background="AntiqueWhite" Width="300" Height="Auto" MaxHeight="500">
            <Label Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0 20 0 20"></Label>


            <Label Content="Username" HorizontalAlignment="Left" Margin="25 0 0 5"></Label>
            <TextBox x:Name="UsernameInput" HorizontalAlignment="Center" VerticalContentAlignment="Center" Width="240" Height="30"></TextBox >

            <Label Content="Email" HorizontalAlignment="Left" Margin="25 10 0 0"></Label>
            <TextBox x:Name="EmailInput" HorizontalAlignment="Center" VerticalContentAlignment="Center" Width="240" Height="30"></TextBox>

            <Label Content="Password" HorizontalAlignment="Left" Margin="25 10 0 0"></Label>
            <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Center" VerticalContentAlignment="Center" Width="240" Height="30"></PasswordBox>

            <TextBlock x:Name="ErrorText" Visibility="Collapsed" TextWrapping="Wrap" Foreground="Red" Text="" HorizontalAlignment="Left" Margin="30 10 0 0"></TextBlock>
            <Button x:Name="SignUpButton" Content="Sign Up" HorizontalAlignment="Center" Width="240" Height="30" Margin="0 20 0 0" Click="OnSignUp"></Button>

            <TextBlock Margin="30 5 0 0" HorizontalAlignment="Left" MouseLeftButtonDown="OnSwitchingToLogin">
            <Underline >Already have an account?</Underline>
            </TextBlock>
        </StackPanel>

    </Grid>
</UserControl>
