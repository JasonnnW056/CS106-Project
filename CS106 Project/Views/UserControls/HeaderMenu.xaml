<UserControl x:Class="CS106_Project.Views.UserControls.HeaderMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10 0 10 0"/>
            <Setter Property="Cursor" Value="Hand"/>

        </Style>
    </UserControl.Resources>

    <Border Background="White" BorderBrush="Gray" BorderThickness="0 0 0 1" Height="60">
        <Grid ShowGridLines="False" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2.5*"></ColumnDefinition>

                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                <Image Source="/Images/Logo.jpg" Width="40" Margin="5 0 0 0"></Image>
                <TextBlock Text="MyDoctors" Padding="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Button Style="{StaticResource NavButtonStyle}" Content="Home" Margin="10 0 10 0" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Padding="20,10"></Button>
                <Button Content="Our Doctors" Margin="10 0 10 0" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Padding="20,10"></Button>
                <Button Content="Appointments" Margin="10 0 10 0" HorizontalAlignment="Center" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" Padding="20,10"></Button>

                <Image Source="/Images/SearchIcon.png" Width="20" Margin="10 0 10 0" HorizontalAlignment="Center" VerticalAlignment="Center" ></Image>

            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="16">
                    <Button BorderThickness="0" Background="Transparent" Content="Login" Padding="20,10" ></Button>
                </Border>

            </StackPanel>
        </Grid>


    </Border>
</UserControl>
