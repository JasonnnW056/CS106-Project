<UserControl x:Class="CS106_Project.Views.UserControls.BookingTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <!--PreviewMouseLeftButtonUp="OnDatePickerClick"-->
        <StackPanel Background="White">
            <TextBlock Text="Choose your appointment date:*" FontSize="16" Margin="0 0 0 12"></TextBlock>
            <DatePicker x:Name="DateBox" Height="40" FontSize="16" Margin="0 0 0 12" VerticalContentAlignment="Center"></DatePicker>

            <TextBlock Text="Choose your appointment time:*" FontSize="16" Margin="0 0 0 12" ></TextBlock>
            <ComboBox x:Name="TimePicker" Height="40" FontSize="16" Margin="0 0 0 12" VerticalContentAlignment="Center"></ComboBox>

            <!--<Button Content="Click" Click="CombineDate"></Button>-->
        </StackPanel>
    </Grid>
</UserControl>
