<UserControl x:Class="CS106_Project.Views.UserControls.BookingTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <!--PreviewMouseLeftButtonUp="OnDatePickerClick"-->
        <StackPanel Background="White">
            <TextBlock Text="Choose your appointment date:" Margin="40,40,40,10"></TextBlock>
            <DatePicker x:Name="DateBox" Margin="40,0" ></DatePicker>

            <TextBlock Text="Choose your appointment time:" Margin="40,10"></TextBlock>
            <ComboBox x:Name="TimePicker" Margin="40,0"></ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
