<UserControl x:Class="CS106_Project.Views.UserControls.AppointmentListCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CS106_Project.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="0.5">
        
        <Grid ShowGridLines="True" Background="White" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Content="{Binding Date}" HorizontalAlignment="Center" VerticalAlignment="Center" ></Label>
            <Label Grid.Column="1" Content="{Binding DoctorName}" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
            <Label Grid.Column="2" Content="{Binding Type}" HorizontalAlignment="Center" VerticalAlignment="Center"></Label >
            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
            MouseEnter="OnStackPanelMouseEnter" MouseLeave="OnStackPanelMouseLeave">
                <Label x:Name="BookingStatus" Content="{Binding Status}" 
           MouseLeftButtonDown="OnStatusClicked"></Label>
                <Border x:Name="CancelButtonBorder" BorderBrush="Gray" BorderThickness="0.5" Padding="4 2 4 2" CornerRadius="8" Background="Red" Visibility="Collapsed">
                    <Button x:Name="CancelButton" Content="CANCEL" BorderThickness="0" Background="Transparent" FontWeight="SemiBold" Click="OnCancelButtonClicked"></Button>
                </Border>
            </StackPanel>

        </Grid>
        
    </Border>
</UserControl>
