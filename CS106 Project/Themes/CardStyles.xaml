<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="DoctorCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource OffWhite}"/>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderBrush" Value="{StaticResource LightGray}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#C41E3A" Opacity="0.15" ShadowDepth="2" BlurRadius="20"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>