<Page x:Class="CS106_Project.Pages.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106_Project.Pages"
      xmlns:components="clr-namespace:CS106_Project.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="BookingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        
        <components:HeaderMenu></components:HeaderMenu>

        <ScrollViewer Grid.Row="1">
            <StackPanel >
                <components:BookingForm x:Name="BookingFormControl" Width="800" Margin="0 50 0 100"></components:BookingForm>
            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Page>
