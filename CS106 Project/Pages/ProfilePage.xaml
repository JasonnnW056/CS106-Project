<Page x:Class="CS106_Project.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106_Project.Pages"
      xmlns:components="clr-namespace:CS106_Project.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280 "
      Title="ProfilePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>

        <components:HeaderMenu Grid.Row="0"/>

        <StackPanel Grid.Row="1" Background="LightBlue" Width="400" Height="Auto">
            <Image Source="/Images/UserProfile.png" Width="150" Margin="0 10 0 0"/>
            <TextBlock Text="{Binding Username}" HorizontalAlignment="Center" FontSize="24" FontWeight="SemiBold" Margin="0 10 0 0"/>
            <TextBlock Text="Patient" HorizontalAlignment="Center" FontSize="18" FontWeight="Light" Margin="0 0 0 0"/>
            
            <Border Background="LightGray" Margin="20,20" CornerRadius="16">
                <StackPanel  >
                    <TextBlock Text="Email" HorizontalAlignment="Left" FontSize="16" FontWeight="Light" Margin="15 10 0 0"/>
                    <TextBlock Text="{Binding Email}" HorizontalAlignment="Left" FontSize="20" FontWeight="SemiBold" Margin="15 5 0 10"/>
                </StackPanel>
            </Border>

            <Border Background="LightGray" Margin="20,0" CornerRadius="16">
                <StackPanel>
                    <TextBlock Text="Phone" HorizontalAlignment="Left" FontSize="16" FontWeight="Light" Margin="15 10 0 0"/>
                    <TextBlock Text="{Binding PhoneNumber}" HorizontalAlignment="Left" FontSize="20" FontWeight="SemiBold" Margin="15 5 0 10"/>
                </StackPanel>
            </Border>
            <Border Background="Red" Margin="20 40 20 0" CornerRadius="16">
               <Button Content="Logout"  FontSize="16" FontWeight="Bold" Foreground="Black" Padding="10,10" Background="Transparent" BorderThickness="0"/> 
            </Border>
            
        </StackPanel>
    </Grid>
</Page>
