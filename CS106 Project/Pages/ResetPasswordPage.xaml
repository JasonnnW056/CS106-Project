<Page x:Class="CS106_Project.Pages.ResetPasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106_Project.Pages"
      xmlns:components="clr-namespace:CS106_Project.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ResetPasswordPage"> 

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <components:HeaderMenu Grid.Row="0"/>

        <StackPanel Grid.Row="1" Background="Gray">
            <TextBlock Text="Reset Account Password" HorizontalAlignment="Center" FontSize="32" Margin=" 0 30 0 0" FontWeight="SemiBold"/>

            <StackPanel HorizontalAlignment="Center" Margin="0 50 0 0">
                <TextBlock Text="New Password" Margin=" 30 0 0 0" FontSize="16"></TextBlock>
                <Border Background="LightGray" Margin="20,15" CornerRadius="16" Width="650">
                    <PasswordBox x:Name="NewPasswordBox" Width="650" FontSize="20" FontWeight="SemiBold" Margin="0 5 0 10" 
                    BorderThickness="0" Background="Transparent"/>
                </Border>
            </StackPanel>


            <StackPanel HorizontalAlignment="Center" Margin="0 25 0 0" >
                <TextBlock Text="Confirm Password" Margin=" 30 0 0 0" FontSize="16"></TextBlock>
                <Border Background="LightGray" Margin="20,15" CornerRadius="16" Width="650">
                    <PasswordBox x:Name="ConfirmationPasswordBox" Width="650" FontSize="20" FontWeight="SemiBold" Margin="0 5 0 10" 
                            BorderThickness="0" Background="Transparent"/>
                </Border>
            </StackPanel>

            <StackPanel Margin="308 40 0 0" Orientation="Horizontal" HorizontalAlignment="Left">

                <Border Background="LightGray" BorderThickness="1" BorderBrush="Black" Padding="20,8" CornerRadius="16" Margin="0,0,10,0">
                    <Button BorderThickness="0" x:Name="CancelButton" Background="Transparent"  Content="Cancel" FontSize="16" Width="130" ></Button>
                </Border>

                <Border Background="LightGray" BorderThickness="1" BorderBrush="Black" Padding="20,8" CornerRadius="16">
                    <Button BorderThickness="0" Background="Transparent" Content="Reset Password" FontSize="16" Width="427"></Button>
                </Border>

            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
