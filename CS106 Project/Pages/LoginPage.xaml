<Page x:Class="CS106_Project.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CS106_Project.Pages"
      xmlns:components="clr-namespace:CS106_Project.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"    
      Title="LoginPage">

    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <components:HeaderMenu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  ></components:HeaderMenu>

        <Rectangle Grid.Row="1" Fill="Red"></Rectangle>
        <StackPanel x:Name="LoginText" Grid.Row="1" Visibility="Visible" VerticalAlignment="Center" Width="350">
            
            <TextBlock Text="Login" HorizontalAlignment="Center"  FontSize="30" Margin="0 -40 0 30" FontWeight="SemiBold"></TextBlock>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="18" Text="Login to book appointments with our trusted-partnered doctor"></TextBlock>
           
        </StackPanel>

        <StackPanel x:Name="SignUpText" Grid.Row="1" Visibility="Collapsed" VerticalAlignment="Center" Width="350">

            <TextBlock Text="Sign Up" HorizontalAlignment="Center" FontSize="30" Margin="0 -40 0 30" FontWeight="SemiBold"></TextBlock>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="18" Text="Sign Up to book appointments with our trusted-partnered doctor"></TextBlock>

        </StackPanel>

        <components:LoginAndSignUp Grid.Row ="1" x:Name="LoginSignUpForm" VerticalAlignment="Top" Grid.Column="2" Width="500" Margin=" 0 45 0 0"></components:LoginAndSignUp>
    </Grid>
</Page>
